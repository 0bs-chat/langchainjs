{
  "name": "docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "bash ./local_build.sh",
    "dev": "yarn build & nodemon --watch ./snippets/ -e mdx,md --exec \"bash\" ./compile_docs.sh & wait"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "watch": [
      "./src/schema",
      "./build"
    ],
    "ext": "mdx,md",
    "events": {
      "restart": "rsync -av --checksum ./snippets/ ./_dist/snippets/"
    }
  },
  "engines": {
    "node": ">=18"
  }
}
